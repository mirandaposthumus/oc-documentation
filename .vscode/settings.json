{
  "files.associations": {
    "*.tsx": "typescriptreact"
  },
  "editor.formatOnSave": false, // DONT TURN THIS ON, it applies vscode specific formatting that may clash with eslint/prettier
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // autofix eslint on save
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // we might choose to enable format
  // on save for css/html but diabling for now
  "[html]": {
    "editor.formatOnSave": false
  },
  "[css]": {
    "editor.formatOnSave": false
  }
}